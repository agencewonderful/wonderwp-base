{
  "name": "wonderwp/site",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Jeremy Desvaux",
      "email": "jeremy.desvaux@wonderful.fr",
      "homepage": "https://github.com/jeremy-wdf"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://won.wonderful.fr/satis/packages-mirror"
    },
    {
      "type":"vcs",
      "url":"https://github.com/jeremy-wdf/daux.io"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "oscarotero/env": "^1.0",
    "johnpbloch/wordpress": "^4.7",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/cms-tree-page-view": "dev-trunk",

    "wonderwp/framework": "dev-feature/poc",
    "agencewonderful/wonderwp_theme": "dev-master",
    "agencewonderful/wonderwp_plugin": "dev-feature/poc",

    "agencewonderful/wwp-generator": "dev-master",
    "agencewonderful/wwp-translator": "dev-master",
    "agencewonderful/wwp-newsletter": "dev-master",
    "agencewonderful/wwp-contact": "dev-master",
    "agencewonderful/wwp-actu": "dev-master",
    "agencewonderful/wwp-download": "dev-master",
    "agencewonderful/wwp-meteo": "dev-master",
    "agencewonderful/wwp-branchepage": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1",
    "wpackagist-plugin/debug-bar": "dev-trunk",
    "apigen/apigen": "^4.1",
    "justinrainbow/json-schema": "1.6.1",
    "jeremy-wdf/daux.io": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
    ]
  }
}
