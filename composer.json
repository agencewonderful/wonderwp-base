{
    "name": "wonderwp/site",
    "type": "project",
    "license": "MIT",
    "description": "A modern WordPress stack",
    "homepage": "https://roots.io/bedrock/",
    "authors": [
        {
            "name": "Jeremy Desvaux",
            "email": "jeremy.desvaux@wonderful.fr",
            "homepage": "https://github.com/jeremy-wdf"
        }
    ],
    "keywords": [
        "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
    ],
    "config": {
        "preferred-install": {
            "wonderwp/*": "source",
            "agencewonderful/*": "source",
            "*": "dist"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "~/Sites/wonderwp/theme"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugin"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-actu"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-branchepage"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-contact"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-download"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-espace-restreint"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-faq"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-generator"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-jeux"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-map"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-meteo"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-newsletter"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-social"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-stats"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-translator"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-trombinoscope"
        },
        {
            "type": "path",
            "url": "~/Sites/wonderwp/plugins/wwp-vote"
        },
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jeremy-wdf/daux.io"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.0.12",
        "vlucas/phpdotenv": "^2.0.1",
        "oscarotero/env": "^1.0",
        "johnpbloch/wordpress": "^4.7",
        "roots/wp-password-bcrypt": "1.0.0",
        "wpackagist-plugin/cms-tree-page-view": "dev-trunk",

        "agencewonderful/wwp-actu": "*",
        "agencewonderful/wwp-branchepage": "*",
        "agencewonderful/wwp-contact": "*",
        "agencewonderful/wwp-download": "*",
        "agencewonderful/wwp-espace-restreint": "*",
        "agencewonderful/wwp-faq": "*",
        "agencewonderful/wwp-generator": "*",
        "agencewonderful/wwp-jeux": "*",
        "agencewonderful/wwp-map": "*",
        "agencewonderful/wwp-meteo": "*",
        "agencewonderful/wwp-newsletter": "*",
        "agencewonderful/wwp-social": "*",
        "agencewonderful/wwp-stats": "*",
        "agencewonderful/wwp-trombinoscope": "*",
        "agencewonderful/wwp-translator": "*",
        "agencewonderful/wwp-vote": "*"

    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5.1",
        "wpackagist-plugin/debug-bar": "dev-trunk",
        "apigen/apigen": "dev-master",
        "roave/better-reflection": "dev-master#c87d856",
        "justinrainbow/json-schema": "1.6.1",
        "daux/daux.io": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "WonderWp\\Theme\\Components\\": "web/app/themes/wwp_child_theme/styleguide/components/components/componentsClasses",
            "WonderWp\\Theme\\Child\\": "web/app/themes/wwp_child_theme/includes",
            "WonderWp\\Plugin\\Stats\\": "web/app/plugins/wwp-stats/includes"
        }
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
        ]
    }
}
