{
    "name": "wonderwp/site",
    "type": "project",
    "license": "MIT",
    "description": "A modern WordPress stack",
    "homepage": "https://roots.io/bedrock/",
    "authors": [
        {
            "name": "Jeremy Desvaux",
            "email": "jeremy.desvaux@wonderful.fr",
            "homepage": "https://github.com/jeremy-wdf"
        }
    ],
    "keywords": [
        "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
    ],
    "config": {
        "preferred-install": {
            "wonderwp/*": "source",
            "agencewonderful/*": "source",
            "*": "dist"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jeremy-wdf/daux.io"
        },
        {
            "type": "composer",
            "url": "https://won.wonderful.fr/satis/packages-mirror"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.6",
        "composer/installers": "~1.0.12",
        "vlucas/phpdotenv": "^2.0.1",
        "oscarotero/env": "^1.0",
        "johnpbloch/wordpress": "^4.7",
        "roots/wp-password-bcrypt": "1.0.0",
        "wpackagist-plugin/cms-tree-page-view": "dev-trunk",
        "agencewonderful/wonderwp-theme-core":"*",
        "agencewonderful/wonderwp-plugin-core":"*",
        "agencewonderful/wwp-actu": "*",
        "agencewonderful/wwp-branchepage": "*",
        "agencewonderful/wwp-contact": "*",
        "agencewonderful/wwp-download": "*",
        "agencewonderful/wwp-espace-restreint": "*",
        "agencewonderful/wwp-faq": "*",
        "agencewonderful/wwp-generator": "*",
        "agencewonderful/wwp-jeux": "*",
        "agencewonderful/wwp-map": "*",
        "agencewonderful/wwp-meteo": "*",
        "agencewonderful/wwp-newsletter": "*",
        "agencewonderful/wwp-social": "*",
        "agencewonderful/wwp-trombinoscope": "*",
        "agencewonderful/wwp-translator": "*",
        "agencewonderful/wwp-vote": "*",
        "twig/twig": "~2.0"

    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5.1",
        "wpackagist-plugin/debug-bar": "dev-trunk",
        "apigen/apigen": "^4.1",
        "justinrainbow/json-schema": "1.6.1",
        "jeremy-wdf/daux.io": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "WonderWp\\Theme\\Components\\": "web/app/themes/wwp_child_theme/styleguide/components/components/componentsClasses",
            "WonderWp\\Theme\\Child\\": "web/app/themes/wwp_child_theme/includes",
            "WonderWp\\Plugin\\Social\\": "web/app/plugins/wwp-social/includes"
        }
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
        ]
    }
}
